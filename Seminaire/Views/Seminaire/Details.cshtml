
@model Conference

@{
    ViewBag.Title = "Détails de la conférence " + Model.Nom;
    var langue = new CultureInfo("fr-CA");
}

<h2>Détails @Model.Nom</h2>

<div>
    <h3>@Model.Nom</h3>
    <p><b>@Model.Lieu</b></p>
    <p>
        <i>
            @Model.Date.ToString("D", langue),
            @Model.Date.ToString("t", langue)
            (@Model.Duree.TotalMinutes minutes)
        </i>
    </p>
    <p>@Model.Description</p>
    <hr />

    <h4>Inscrivez quelqu'un</h4>
    @using (Html.BeginForm("Create", "Seminaire",
                                                new { id = Model.ConferenceId },
                                                FormMethod.Post,
                                                new { @class = "form-horizontal" }))
    {

        <fieldset>
            <legend>Inscription</legend>
            <div class="form-group">
                <label for="nom" class="col-lg-1 col-md-2 control-label">
                    Nom
                </label>
                <div class="col-lg-11 col-md-10">
                    <input type="text"
                           name="nom"
                           id="nom"
                           required="required"
                           class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label for="courriel" class="col-lg-1 col-md-2 control-label">
                    Courriel
                </label>
                <div class="col-lg-11 col-md-10">
                    <input type="email"
                           name="courriel"
                           id="courriel"
                           class="form-control"
                           oninvalid="courriel.setCustomValidity('Entrez un courriel valide')"
                           onchange="courriel.setCustomValidity('')">
                </div>
            </div>
            <div class="form-group">
                <label for="tel"  class="col-lg-1 col-md-2 control-label">
                    Téléphone
                </label>
                <div class="col-lg-11 col-md-10">
                    <input type="tel"
                           pattern="\d{3}-\d{3}-\d{4}"
                           name="telephone"
                           id="tel"
                           class="form-control"
                           placeholder="555-666-7777"
                             >
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-11 col-md-10 col-lg-offset-1 col-md-offset-2">
                    <input type="submit"
                           name="Inscrire"
                           class="btn btn-default btn-primary btn-lg" />
                </div>
            </div>
        </fieldset>
    }

</div>

